{
	"name": "twitter-search",
	"version": "0.1.0",
	"private": true,
	"dependencies": {
		"@testing-library/jest-dom": "^5.11.4",
		"@testing-library/react": "^11.1.0",
		"@testing-library/user-event": "^12.1.10",
		"axios": "^0.21.1",
		"body-parser": "^1.19.0",
		"bulma": "^0.9.2",
		"concurrently": "^5.3.0",
		"cors": "^2.8.5",
		"dotenv": "^8.2.0",
		"express": "^4.17.1",
		"extract-urls": "^1.3.2",
		"grommet": "^2.16.2",
		"grommet-icons": "^4.5.0",
		"http": "^0.0.1-security",
		"http-proxy-middleware": "^1.0.6",
		"morgan": "^1.10.0",
		"node-fetch": "^2.6.1",
		"node-sass": "4.14.1",
		"nodemon": "^2.0.7",
		"path": "^0.12.7",
		"react": "^17.0.1",
		"react-dom": "^17.0.1",
		"react-icons": "^4.1.0",
		"react-router-dom": "^5.2.0",
		"react-scripts": "4.0.1",
		"request": "^2.88.2",
		"styled-components": "^5.2.1",
		"ts-node": "^9.1.1",
		"typescript": "^4.0.3",
		"util": "^0.12.3",
		"web-vitals": "^0.2.4"
	},
	"scripts": {
		"start": "yarn run development",
		"development": "NODE_ENV=development concurrently --kill-others \"yarn run client\" \"yarn run server\"",
		"production": "yarn run build && NODE_ENV=production yarn run server",
		"client": "react-scripts start",
		"server": "nodemon --project server/tsconfig.json --exec ts-node server/server.ts",
		"build": "react-scripts build",
		"test": "jest test",
		"eject": "react-scripts eject",
		"format": "prettier --write \"**/*.ts\" \"server/**/*.ts\" \"src/**/*.ts\" \"src/**/*.tsx\" \"src/**/*.css\" "
	},
	"eslintConfig": {
		"extends": [
			"react-app",
			"react-app/jest"
		]
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"devDependencies": {
		"@types/cors": "^2.8.9",
		"@types/express": "^4.17.11",
		"@types/jest": "^26.0.15",
		"@types/morgan": "^1.9.2",
		"@types/node": "^14.14.22",
		"@types/node-fetch": "^2.5.8",
		"@types/react": "^16.9.53",
		"@types/react-dom": "^16.9.8",
		"husky": "^4.3.8",
		"lint-staged": ">=10",
		"prettier": "^2.2.1",
		"ts-jest": "^26.5.0",
		"ts-node-dev": "^1.1.1"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"**/*.{ts,tsx,css}": [
			"prettier --check",
			"jest --bail --findRelatedTests"
		]
	}
}
